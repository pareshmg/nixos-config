function flushdns {
    sudo dscacheutil -flushcache
    sudo killall -HUP mDNSResponder
}

alias k='kubectl'
alias kc="kubectl config set-context --current --namespace"
alias kb='kubebash'
alias kbn='kubebashn'


function myinstance {
    INSTANCE_ID=$(aws ec2 describe-instances --filters "Name=tag:Name,Values=*${USER}*" --query "Reservations[*].Instances[*].InstanceId"  "$@" --output text | head -n 1)
    INSTANCE_NAME=$(aws ec2 describe-instances --instance-ids "$INSTANCE_ID" --query "Reservations[*].Instances[*].Tags[?Key=='Name'].Value" "$@" --output text)
    echo "Connecting to $INSTANCE_NAME ($INSTANCE_ID)" >&2
    echo $INSTANCE_ID
}


function startinstance {
 aws ec2 start-instances --instance-ids $1
}
