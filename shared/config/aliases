function kubepodn {
    kubectl get pods -n $1 -o json | jq -r ".items[].metadata.name" | grep -i $2 --color=never
}
function kubepod {
    kubectl get pods -n $1 -o json | jq -r ".items[0].metadata.name"
}
function kubebash {
    kubectl -n $1 exec -it $(kubepod $1) -- bash
}
function kubebashn {
    kubectl -n $1 exec -it $(kubepodn $1 $2) -- bash
}

