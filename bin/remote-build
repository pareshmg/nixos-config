#!/bin/sh -e
SCRIPT_DIR=$(dirname "$0")
. $SCRIPT_DIR/common

set -e
set -x

FLAKE="$1"
TARGET="$2"


shift # remove flake
shift # remove IP

export args=$@

echo "Running flake ${FLAKE} on target ${TARGET} with additional args ${args}"


# Navigate to the directory of this script
cd $(dirname $(readlink -f $0))
cd ..

# copy the config over
#rsync --exclude 'flake.lock' -az $PWD/ ${TARGET}:~/.config/nixos-config
rsync -az $PWD/ ${TARGET}:~/.config/nixos-config



#rsync -az ~/cmt/CMTNix/ ${TARGET}:~/cmt/CMTNix

# copy the secrets over
if [ -d ${SECRETS_DIR} ]; then
    rsync -az ${SECRETS_DIR}/ ${TARGET}:~/.config/nix-secrets
fi

# ssh in and run the build
ssh -t ${TARGET} "cd ~/.config/nixos-config; ./bin/setup && nix --experimental-features 'nix-command flakes' run . -- $FLAKE $@"

# remove secrets
#ssh -t ${TARGET} "rm -rf ~/.config/nix-secrets"

set +e
set +x
